<Window x:Class="DesktopLayoutSaver.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Desktop Layout Saver" Height="350" Width="525">
    <Grid>
        <StackPanel Margin="10">
            <Grid>
                <TextBox Name="ProfileNameTextBox" Width="200" Margin="0,0,0,10"/>
                <TextBlock Name="PlaceholderTextBlock" Text="Enter profile name" 
                           Foreground="Gray" Margin="0,0,0,10"
                           IsHitTestVisible="False" />
            </Grid>
            <Button Name="SaveProfileButton" Content="Save Profile" Width="200" Click="SaveProfileButton_Click" Margin="0,0,0,10"/>
            <Button Name="RestoreProfileButton" Content="Restore Profile" Width="200" Click="RestoreProfileButton_Click" Margin="0,0,0,10"/>
            <Button Name="DeleteProfileButton" Content="Delete Profile" Width="200" Click="DeleteProfileButton_Click" Margin="0,0,0,10"/>
            <ListBox Name="ProfilesListBox" Width="200" Height="150" Margin="0,10,0,0"/>
        </StackPanel>
    </Grid>
</Window>
